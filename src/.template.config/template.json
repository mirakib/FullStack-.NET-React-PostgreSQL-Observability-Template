{
  "$schema": "http://json.schemastore.org/template",
  "author": "Senior Engineering Team",
  "classifications": ["Web", "API", "React", "PostgreSQL", "Nginx", "Monitoring"],
  "identity": "Company.FullStack.Template.CSharp",
  "name": "Production Full-Stack App (.NET + React + PostgreSQL + Monitoring)",
  "shortName": "company-fullstack",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "Backend",
  "preferNameDirectory": true,
  "placeholderFilename": ".gitkeep",
  "symbols": {
    "postgresPassword": {
      "type": "parameter",
      "dataType": "string",
      "defaultValue": "P@ssw0rd123!",
      "description": "PostgreSQL admin password"
    },
    "enableHttps": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false",
      "description": "Enable HTTPS development certificate"
    }
  },
  "primaryOutputs": [
    { "path": "docker-compose.yml" },
    { "path": "src/backend/Backend.csproj" },
    { "path": "src/frontend/package.json" }
  ]
}